doctype html
html(lang='en')
  head
    include ../../include/head
    title Overlay by Eden.
    link(href='../css/style.css', rel='stylesheet')
  body
    .universe#overlay-pg
        #overlay
            .container
                h1.text-center Image Overlay by Eden.
                .img-overlay.overlay.on-hover.fade.solid
                    img(src="http://www.placecage.com/250/250", alt="")
                    .content.col.center-center
                        h6 fade.
                .img.overlay.circle.on-hover.slide-right
                    .content.col.center-center
                        h6 slide right.
                .img-overlay.overlay.dark.on-hover.slide-left
                    img(src="http://www.placecage.com/450/250", alt="")
                    .content.col.center-center
                        h6 slide left.
                .img-overlay.overlay.dark.on-hover.slide-up
                    img(src="http://www.placecage.com/260/260", alt="")
                    .content.col.center-center
                        h6 slide up.
                .img-overlay.overlay.dark.on-hover.slide-down
                    img(src="http://www.placecage.com/230/230", alt="")
                    .content.col.center-center
                        h6 slide down.
    include ../../include/foot
    script(src="../js/function.js")
